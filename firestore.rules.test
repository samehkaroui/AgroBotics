rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY TEST MODE - Use this for initial setup and testing
    // Replace with firestore.rules (production rules) once authentication is working
    
    match /{document=**} {
      // Allow all reads and writes until December 31, 2025
      // This gives you time to set up authentication properly
      allow read, write: if request.time < timestamp.date(2025, 12, 31);
    }
  }
}
